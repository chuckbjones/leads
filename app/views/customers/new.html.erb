<div class="container mx-auto my-5 p-1 md:w-2/3 w-full shadow-xl rounded bg-white">
  <%= turbo_frame_tag :root_frame do %>
    <div class="mx-auto my-5 p-1 md:w-2/3 w-full">
      <h1 class="font-bold text-2xl">Request for Information</h1>

      <header class="my-5 p-1">
      Enter your contact information in the form below, and one of our local agents will
      respond personally as soon as possible to answer all of your questions.
      </header>

      <%= render "form", customer: @customer %>
    </div>
  <% end %>
</div>
